<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <!-- 01、限制要织入切面的目标类 -->
    <!-- <weaver options="-Xset:weaveJavaxPackages=true -Xlint:ignore -verbose -debug"> -->
    <weaver options="-Xset:weaveJavaxPackages=true -showWeaveInfo">
        <!-- 输出日志：[AppClassLoader@18b4aac2] weaveinfo Join point 'method-execution(void com.example.aop2.LtwBean.test())'
                     in Type 'com.example.aop2.LtwBean' (LtwBean.java:9) advised by around advice from 'com.example.aop2.LogAspect' (LogAspect.java) -->
        <!-- 配合 <aspect> 配置的切面类，限制仅对指定路径下的类，进行增强 -->
        <include within="org.springframework.beans.bean.aop2.*"/>
    </weaver>

    <!-- 02、切面类 -->
    <aspects>
        <aspect name="org.springframework.beans.bean.aop2.LogAspect"/>
    </aspects>
</aspectj>